<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane fx:controller="main.java.controller.Controller"
            xmlns:fx="http://javafx.com/fxml" >

    <Label layoutX="30" layoutY="30" prefWidth="100" text="Matrix Size: " />
    <Spinner fx:id="matrixSize" layoutX="150" layoutY="25" prefWidth="120" />

    <Label layoutX="30" layoutY="70" prefWidth="150" text="Individual Size: " />
    <Spinner fx:id="individualSize" layoutX="150" layoutY="65" prefWidth="120" />

    <Label layoutX="30" layoutY="110" prefWidth="150" text="Individual Count: " />
    <Spinner fx:id="individualCount" layoutX="150" layoutY="105" prefWidth="120" />

    <Label layoutX="30" layoutY="150" prefWidth="100" text="Food Count: " />
    <Spinner fx:id="foodCount" layoutX="150" layoutY="145" prefWidth="120" />

    <Label layoutX="30" layoutY="190" prefWidth="100" text="Max Iteration: " />
    <Spinner fx:id="maxIteration" layoutX="150" layoutY="185" prefWidth="120" />

    <Label layoutX="30" layoutY="230" prefWidth="100" text="Visualize All" />
    <CheckBox fx:id="visualizeAll" layoutY="230" layoutX="150" />

    <Button fx:id="simulateButton" layoutX="30.0" layoutY="270.0" prefWidth="200.0" mnemonicParsing="false" text="Run" />

</AnchorPane>
